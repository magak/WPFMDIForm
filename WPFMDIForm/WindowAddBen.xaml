<Window x:Class="WPFMDIForm.WindowAddBen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сведения о льготе" Height="239" Width="403">
    <Grid Background="Khaki" Margin="0,0,2,0">
        <DockPanel HorizontalAlignment="Left" Height="103" LastChildFill="False" Margin="0,10,0,0" VerticalAlignment="Top" Width="393">
            <WrapPanel Height="103" VerticalAlignment="Top" Width="392">
                <Label Content="Льгота" Height="30" Width="124"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="232"/>
                <Label Content="Значение льготы" Height="30" Width="124"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="232"/>
                <Label Content="Общая" Height="30" Width="123"/>
                <CheckBox IsChecked="{Binding Flat.Счетчики_установлены}" Height="14" Width="15" RenderTransformOrigin="-1.4,0.5"/>
            </WrapPanel>
        </DockPanel>
        <Button x:Name="save"
                Content="Сохранить" HorizontalAlignment="Left" Width="106" Height="29" VerticalAlignment="Top" Margin="150,170,0,0"
                />
        <Button x:Name="del"
        	Content="Отмена" HorizontalAlignment="Left" Width="117" Height="29" VerticalAlignment="Top" Margin="266,170,0,0"
                />
    </Grid>
</Window>
