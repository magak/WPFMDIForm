                <Label Content="ХВС" Height="30" Width="75"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="250"/>
                <Label Content="ГВС" Height="30" Width="76"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="250"/>
            </WrapPanel>
            <StackPanel Height="101" VerticalAlignment="Top" Width="100" Margin="0,46,0,0">
                <Button Content="Сохранить" Height="22" Margin="0,4"/>
                <Button Content="Отмена" Height="22" Margin="0,4" RenderTransformOrigin="0.5,-0.545"/>
            </StackPanel>
        </DockPanel>
        <ComboBox Name="intervals" Height="22" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="77,58,0,0" Width="246">
            <TextBlock>Январь 2016</TextBlock>
            <TextBlock>Февраль 2016</TextBlock>
            <TextBlock>Март 2016</TextBlock>
        </ComboBox>
        <Label Content="Период" Margin="0,55,373,209" RenderTransformOrigin="-1.307,0.966"/>
    </Grid>
</UserControl>
