<Window x:Class="WPFMDIForm.WindowAddUsl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сведения об услуге" Height="178" Width="458">
    <Grid Background="khaki" Margin="0,0,0,-5">
        <DockPanel HorizontalAlignment="Left" Height="117" Margin="10,4,0,0" LastChildFill="False" VerticalAlignment="Top" Width="430">
            <WrapPanel Height="70" VerticalAlignment="Top" Width="428">
                <Label Content="Вид услуги" Height="30" Width="170"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="250"/>
                <Label Content="Тариф" Height="30" Width="170"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="250"/>
            </WrapPanel>
        </DockPanel>

        <Button x:Name="save"
                Margin="225,119,0,10"
                Content="Сохранить" HorizontalAlignment="Left" Width="98"
                />
        <Button x:Name="del"
        	Margin="346,119,0,0"
        	Content="Отмена" HorizontalAlignment="Left" Width="94" Height="24" VerticalAlignment="Top"
                />

    </Grid>
</Window>
