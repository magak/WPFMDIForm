<Window x:Class="WPFMDIForm.WindowAddFlat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Loaded="WindowLoaded"
    Title="Сведения о квартире"
    Icon="Icon.ico"
    Width="536"
    Height="480">

    <Grid Background="khaki">
        <DockPanel HorizontalAlignment="Left" Height="470" Margin="5,10,0,0" LastChildFill="False" VerticalAlignment="Top" Width="519">
            <WrapPanel Height="439" VerticalAlignment="Top" Width="428">
                <Label Content="Номер квартиры" Height="30" Width="170"/>
                <TextBox Text="{Binding Номер_квартиры}" Height="30" TextWrapping="Wrap"  Width="250"/>
                <Label Content="Площадь квартиры" Height="30" Width="170"/>
                <TextBox Text="{Binding Площадь_квартиры}" Height="30" TextWrapping="Wrap"  Width="250"/>

                <Label Content="Установлены счетчики" Height="30" Width="170"/>
                <CheckBox IsChecked="{Binding Счетчики_установлены}" Height="14" Width="250"/>
                <Label Content="Адрес" Height="30" Width="170"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="250"/>


            </WrapPanel>
            <StackPanel Height="164" VerticalAlignment="Top" Width="80" RenderTransformOrigin="0.874,0.494" Margin="0,89,0,0">
                <Button Content="Сохранить" Height="22" Margin="0,4"/>
                <Button Content="Отмена" Height="22" Margin="0,4"/>
            </StackPanel>
        </DockPanel>
        <Button Name="save"
                Margin="281,389,131,27"
                Content="Сохранить" Click="save_Click"
                />
        <Button x:Name="del"
        	Margin="402,389,10,27"
        	Content="Отмена" Click="del_Click"
                />

    </Grid>
</Window>
