<Window x:Class="WPFMDIForm.WindowLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Вход в систему" Height="200" Width="400">
    <Grid Background="Khaki">
        <DockPanel HorizontalAlignment="Left" Height="67" LastChildFill="False" Margin="0,21,0,0" VerticalAlignment="Top" Width="392">
            <WrapPanel Height="69" VerticalAlignment="Top" Width="391">
                <Label Content="Имя пользователя" Height="30" Width="130"/>
                <TextBox Name="login" Height="30" TextWrapping="Wrap"  Width="239"/>
                <Label Content="Пароль" Height="30" Width="130"/>
                <PasswordBox Name="password" Height="30" Width="238"/>
            </WrapPanel>



        </DockPanel>
        <Button x:Name="enter"
        		Content="Войти" HorizontalAlignment="Right" Width="94" Margin="0,0,21,10" Height="24" VerticalAlignment="Bottom"
                Click="login_Click"/>
    </Grid>
</Window>
