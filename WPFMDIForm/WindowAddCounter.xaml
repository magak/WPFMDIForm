<Window x:Class="WPFMDIForm.WindowAddCounter"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сведения о счетчике" Height="209" Width="535">
    <Grid Background="khaki" Margin="0,0,2,0" Height="176" VerticalAlignment="Top">
        <DockPanel HorizontalAlignment="Left" Margin="5,10,0,289" LastChildFill="False" Width="519">
            <WrapPanel Height="167" VerticalAlignment="Top" Width="480" Margin="0,0,0,-167">
                <Label Content="Код счетчика" Height="30" Width="97"/>
                <TextBox Text="{Binding Flat.Номер_квартиры}" Height="30" TextWrapping="Wrap"  Width="376"/>
                <Label Content="Услуга" Height="30" Width="96"/>
                <TextBox Height="30" TextWrapping="Wrap"  Width="340"/>




            </WrapPanel>
        </DockPanel>
        <Button x:Name="save"
                Margin="263,142,0,10"
                Content="Сохранить" HorizontalAlignment="Left" Width="98"
                />
        <Button x:Name="del"
        	Margin="382,142,0,0"
        	Content="Отмена" HorizontalAlignment="Left" Width="94" Height="24" VerticalAlignment="Top"
                />
        <ComboBox Margin="449,43,49,107"/>

    </Grid>
</Window>
